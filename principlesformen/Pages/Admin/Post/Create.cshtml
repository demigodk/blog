@page
@model principlesformen.Pages.Admin.Post.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>TblPost</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.UserId" class="control-label"></label>
                <select asp-for="Input.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Input.Title" class="control-label"></label>
                <input asp-for="Input.Title" class="form-control" />
                <span asp-validation-for="Input.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CategoryId" class="control-label"></label>
                <select asp-for="Input.CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Input.TagId" class="control-label"></label>
                <select asp-for="Input.TagId" class ="form-control" asp-items="ViewBag.TagId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Input.Summary" class="control-label"></label>
                <input asp-for="Input.Summary" class="form-control" />
                <span asp-validation-for="Input.Summary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FullBody" class="control-label"></label>
                <input asp-for="Input.FullBody" class="form-control" />
                <span asp-validation-for="Input.FullBody" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.BannerImagePath" class="control-label"></label>
                <input asp-for="Input.BannerImagePath" multiple type="file" id="files" class="form-control" />
                <span asp-validation-for="Input.BannerImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.SecondImagePath" class="control-label"></label>
                <input asp-for="Input.SecondImagePath" class="form-control" />
                <span asp-validation-for="Input.SecondImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ThirdImagePath" class="control-label"></label>
                <input asp-for="Input.ThirdImagePath" class="form-control" />
                <span asp-validation-for="Input.ThirdImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.NumLikes" class="control-label"></label>
                <input asp-for="Input.NumLikes" class="form-control" />
                <span asp-validation-for="Input.NumLikes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.DatePublished" class="control-label"></label>
                <input asp-for="Input.DatePublished" class="form-control" />
                <span asp-validation-for="Input.DatePublished" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Input.CommentsEnabled" /> @Html.DisplayNameFor(model => model.TblPost.CommentsEnabled)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Input.NumViews" class="control-label"></label>
                <input asp-for="Input.NumViews" class="form-control" />
                <span asp-validation-for="Input.NumViews" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
